<h1>Trips#personal</h1>
<p>Find me in app/views/trips/personal.html.erb</p>

<% if @current_user %>
    <h2><%= @current_user.fname %>'s Trips Feed</h2>

    <h2><% @current_user.trip.each do |trip|%></h2>

<!-- //all of the users trips -->
  <div id="alltrips">
      <h4><% @trip.each do |trip| %></h4>

      <p><%= @current_user.fname %> is transporting <%= trip.driscription%></p>
      <p>It is starting at <%= trip.origin%></p>
      <p>And going to <%= trip.destination%></p>
      <p>Total distance: <%= trip.distance%> million miles.</p>
      <p><%= trip.seats%> seats</p>
      <p>Total cost: <%= trip.cost%></p>

      <form class="" action="/trips/<%= trip.id%>" method="DELETE">
             <input type="submit" name="" value="Delete trips">
      </form>

      <button onclick="location.href='/trips/<%= trip.id %>'" id="edit">Edit Trip</button>

  </div>

    <% end %>
<% end %>
